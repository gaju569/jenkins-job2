pipeline {

  agent any
   stages {
   
      stage('build') {
         steps {
          echo "building node.js-application.."
         }
      }    

      stage('test') {
         steps {
          echo "testing node.js-application..."
         }
      }
   
     stage('deploy') {
        steps {
         echo "deploying node.js-application..."
        } 
      } 
   } 
}     
 

