pipeline {

  agent any
   stages {
   
      stage('build') {
         steps {

          echo "building mongo-application.."

          echo "building gradle-application.."

         }
      }    

      stage('test') {
         steps {

          echo "testing mongo-application..."

          echo "testing gradle-application..."

         }
      }
   
     stage('deploy') {
        steps {

         echo "deploying mongo-application..."

         echo "deploying gradle-application..."

        } 
      } 
   } 
}     
 
