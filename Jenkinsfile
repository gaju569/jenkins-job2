pipeline {

  agent any
   stages {
   
      stage('build') {
         steps {
          echo "building docker-application.."
         }
      }    

      stage('test') {
         steps {
          echo "testing docker-application..."
         }
      }
   
     stage('deploy') {
        steps {
         echo "deploying docker-application..."
        } 
      } 
   } 
}     
 

